<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/llitem"
    android:layout_width="match_parent"
    android:layout_height="100dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/ivSetTracksThumb"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_margin="10dp"
            android:background="@drawable/loadingpic"
            app:srcCompat="@drawable/isplas" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tvSetTracksTitle"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:ellipsize="marquee"
                android:marqueeRepeatLimit="marquee_forever"
                android:maxLines="2"
                android:padding="10dp"
                android:scrollHorizontally="true"
                android:singleLine="true"
                android:text="songTitle"
                android:textSize="14sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tvDownloading"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Downloading...."
                android:textSize="12sp"
                android:visibility="gone" />
        </LinearLayout>

        <ImageButton
            android:id="@+id/ibPlayPause"
            android:layout_width="wrap_content"
            android:layout_height="45dp"
            android:layout_weight="1"
            android:background="#00ffffff"
            android:scaleType="fitCenter"
            app:srcCompat="@drawable/ic_baseline_play_arrow_24_d1a538"
            tools:ignore="VectorDrawableCompat"
            tools:visibility="visible" />

        <ImageButton
            android:id="@+id/ibMore"
            android:layout_width="wrap_content"
            android:layout_height="35dp"
            android:layout_weight="1"
            android:background="#00ffffff"
            android:scaleType="fitCenter"
            app:srcCompat="@drawable/ic_baseline_favorite_border_24"
            tools:ignore="VectorDrawableCompat"
            tools:visibility="visible" />
    </LinearLayout>

</LinearLayout>